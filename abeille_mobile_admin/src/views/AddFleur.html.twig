{% extends 'Template.html.twig' %}
{% set root = base_url() %}


{% block body %}
	{{ parent() }}
	<div class="titre">
		<h1>Formulaire d'ajout de fleur</h1>
	</div>

	<div class="formulaire divForm container-fluid">
		<form action="{{ base_url() }}/addFleur" method="post" class="myForm" id="xxxx">

			<div class="form-row">
				<div class="form-group col-md-6">
					<label for="nomFr">Nom Francais:</label>
					<input class="form-control" type="texte" id="nomFr" name="nomFr">
				</div>
				<div class="form-group col-md-6">
					<label for="nomL">Nom Latin :</label>
					<input class="form-control" type="texte" id="nomL" name="nomL">
				</div>
			</div>

			<div class="form-row">
				<div class="form-group col-md-4">
					<label for="nectar">Nectar</label>
					<input class="form-control" type="number" id="nectar" name="nectar">
				</div>
				<div class="form-group col-md-4">
					<label for="pollen">Pollen :</label>
					<input class="form-control" type="number" id="pollen" name="pollen">
				</div>
				<div class="form-group col-md-4">
					<label for="hauteur">Hauteur (en m√®tre) :</label>
					<input class="form-control" type="number" id="hauteur" name="hauteur" step=".1">
				</div>
			</div>

			<div class="form-row">
				<div class="form-group col-md-4">
					<label for="floraison">Floraison</label>
					<input class="form-control" type="texte" id="floraison" name="floraison">
				</div>
				<div class="form-group col-md-4">
					<label for="couleur">Couleur :</label>
					<input class="form-control" type="texte" id="couleur" name="couleur">
				</div>
				<div class="form-group col-md-4">
					<label for="emplacement">Emplacement :</label>
					<a data-toggle="modal" data-target="#exampleModal" href="">(voir la carte)</a>
					<select class="custom-select" id="emplacement" name="emplacement">
						{% for emplacement in emplacements %}
							<option value="{{ emplacement.emplacement_id }}">
								{{emplacement.nom}}
							</option>
						{% endfor %}
					</select>
				</div>
			</div>

			<button class="btn btn-primary" type="submit">Ajouter</button>
		</div>

		<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Carte du jardin</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<img class="img-fluid mx-auto d-block" src="{{ root }}/public/images/plan_jardin.png">
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>

	</form>
{% endblock %}
